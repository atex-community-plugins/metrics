<?xml version="1.0" encoding="UTF-8"?>
<web-fragment metadata-complete="true" version="3.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

  <name>atex_metrics_core</name>

  <context-param>
    <param-name>cmservlet_ignore.metrics-plugin.admin</param-name>
    <param-value>metrics-admin</param-value>
  </context-param>

  <context-param>
    <param-name>com.atex.plugins.metrics.packagescan.core</param-name>
    <param-value>com.atex.plugins.metrics</param-value>
  </context-param>

  <listener>
    <listener-class>com.atex.plugins.metrics.MetricsContextListener</listener-class>
  </listener>
  
</web-fragment>
